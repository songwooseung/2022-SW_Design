<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:scrollbarSize="6dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/button2"
        android:scrollbarTrackVertical="@color/pink1"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:id="@+id/ll_changed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/button1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="3dp">

                    <LinearLayout
                        android:id="@+id/ll_diet_kcal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="칼\n로\n리"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diet_carb"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="탄\n수\n화\n물"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diet_prot"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="단\n백\n질"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diet_fat"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="지\n방"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diet_sodi"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="나\n트\n륨"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diet_sug"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:gravity="bottom"
                            android:lineSpacingExtra="-3dp"
                            android:paddingBottom="10dp"
                            android:text="당\n류"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/dash_line" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="1일 영양성분 기준치 대비 비율"
                android:textColor="@color/pink4"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_diet_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>